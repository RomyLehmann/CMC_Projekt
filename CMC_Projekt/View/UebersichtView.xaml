<UserControl x:Class="CMC_Projekt.View.UebersichtView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Suchleiste -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal" 
                    Margin="20,20,20,10"
                    HorizontalAlignment="Left">

            <TextBlock Text="Suche:" 
                       VerticalAlignment="Center"
                       FontSize="14"
                       FontWeight="Bold"
                       Margin="0,0,10,0"/>

            <TextBox x:Name="SearchTextBox"
                     Width="300"
                     Height="35"
                     FontSize="14"
                     Padding="10,5"
                     VerticalContentAlignment="Center"
                     KeyDown="SearchTextBox_KeyDown"/>

            <Button x:Name="SearchButton" 
                    Content="Suchen"
                    Width="100"
                    Height="35"
                    Margin="10,0,0,0"
                    FontSize="14"
                    Cursor="Hand"
                    Click="SearchButton_Click"/>

            <Button x:Name="ClearButton" 
                    Content="Zurücksetzen"
                    Width="120"
                    Height="35"
                    Margin="10,0,0,0"
                    FontSize="14"
                    Cursor="Hand"
                    Click="ClearButton_Click"/>
        </StackPanel>

        <!-- Tabelle -->
        <DataGrid x:Name="BettenDataGrid"
                  Grid.Row="1"
                  Margin="20"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserSortColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HeadersVisibility="Column"
                  Background="White"
                  RowBackground="White"
                  AlternatingRowBackground="White"
                  BorderBrush="Black"
                  BorderThickness="1"
                  RowHeight="40"
                  FontSize="14">

            <DataGrid.Columns>
                <!-- Bett Spalte -->
                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.Header>
                        <Button Content="Bett ▼" 
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="14"
                                Cursor="Hand"
                                Click="SortBett_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding BettNummer}" 
                                       Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Zimmer Spalte -->
                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.Header>
                        <Button Content="Zimmer ▼" 
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="14"
                                Cursor="Hand"
                                Click="SortZimmer_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Zimmer}" 
                                       Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Status Spalte -->
                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.Header>
                        <Button Content="Status ▼" 
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="14"
                                Cursor="Hand"
                                Click="SortStatus_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" 
                                       Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Wartung Spalte -->
                <DataGridTemplateColumn Width="150">
                    <DataGridTemplateColumn.Header>
                        <Button Content="Wartung ▼" 
                                Background="Transparent"
                                BorderThickness="0"
                                FontWeight="Bold"
                                FontSize="14"
                                Cursor="Hand"
                                Click="SortWartung_Click"/>
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Wartung}" 
                                       Padding="10,5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- NEU: Ändern Button Spalte -->
                <DataGridTemplateColumn Header="Ändern" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Ändern"
                                    Height="30"
                                    Padding="15,5"
                                    Background="#3498DB"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Cursor="Hand"
                                    Click="AendernButton_Click"
                                    Tag="{Binding BettNummer}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.CellStyle>
        </DataGrid>
    </Grid>
</UserControl>
